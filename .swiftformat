# file options

--exclude Build,.build,DerivedData,Tmp
--symlinks ignore
--swiftversion 5.5

# rules
--enable isEmpty
--disable andOperator
--disable wrapMultilineStatementBraces

# format options

--binarygrouping none 
--commas inline 
--decimalgrouping 3,4 
--hexgrouping none
--nospaceoperators ...,..< 
--octalgrouping none 
--operatorfunc no-space 
--self init-only 
--stripunusedargs closure-only
--ifdef outdent